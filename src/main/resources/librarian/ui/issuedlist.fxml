<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<StackPane fx:id="rootPane" stylesheets="@/styles/dark-theme.css" xmlns="http://javafx.com/javafx/8.0.141"
           xmlns:fx="http://javafx.com/fxml/1" fx:controller="librarian.ui.IssuedListController">
    <AnchorPane id="AnchorPane" fx:id="contentPane" prefHeight="546.0" prefWidth="789.0"
                stylesheets="@/styles/dark-theme.css">
        <TableView fx:id="tableView" layoutX="10.0" layoutY="10.0" prefHeight="410.0" prefWidth="732.0"
                   AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                   AnchorPane.topAnchor="30.0">
            <columns>
                <TableColumn fx:id="bookIDCol" maxWidth="3000.0" prefWidth="60.0" text="Book ID"/>
                <TableColumn fx:id="bookNameCol" prefWidth="187.0" text="Book Name"/>
                <TableColumn fx:id="holderNameCol" prefWidth="75.0" text="Issued To"/>
                <TableColumn fx:id="issueCol" prefWidth="75.0" text="Date of Issue"/>
                <TableColumn fx:id="daysCol" maxWidth="100.0" minWidth="75.0" prefWidth="75.0" text="Days"/>
                <TableColumn fx:id="fineCol" maxWidth="3000.0" prefWidth="75.0" text="Fine"/>
            </columns>
            <contextMenu>
                <ContextMenu styleClass="table-context">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#handleReturn" text="Return this"/>
                        <MenuItem mnemonicParsing="false" onAction="#handleRefresh" text="Refresh"/>
                    </items>
                </ContextMenu>
            </contextMenu>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
        <MenuBar layoutX="20.0" layoutY="20.0" prefHeight="32.0" prefWidth="722.0" AnchorPane.leftAnchor="0.0"
                 AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <Menu mnemonicParsing="false" text="File">
                <MenuItem mnemonicParsing="false" onAction="#exportAsPDF" text="Export as PDF"/>
                <MenuItem mnemonicParsing="false" onAction="#closeStage" text="Close"/>
            </Menu>
        </MenuBar>
    </AnchorPane>
</StackPane>
