<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.layout.*?>
<AnchorPane id="AnchorPane" prefHeight="354.0" prefWidth="400.0" styleClass="custom-pane"
            stylesheets="@/styles/dark-theme.css" xmlns="http://javafx.com/javafx/8.0.121"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="librarian.ui.SettingController">
    <VBox prefHeight="354.0" prefWidth="400.0" spacing="10.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
          AnchorPane.topAnchor="0.0">
        <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
        </padding>
        <JFXTextField fx:id="nDaysWithoutFine" labelFloat="true" promptText="No.of days to keep book without fine">
            <VBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="25.0"/>
            </VBox.margin>
        </JFXTextField>
        <JFXTextField fx:id="finePerDay" labelFloat="true" promptText="Fine per day">
            <VBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </VBox.margin>
        </JFXTextField>
        <JFXTextField fx:id="username" labelFloat="true" promptText="username">
            <VBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </VBox.margin>
        </JFXTextField>
        <JFXPasswordField fx:id="password" labelFloat="true" promptText="password">
            <VBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </VBox.margin>
        </JFXPasswordField>
        <JFXPasswordField fx:id="apiKey" labelFloat="true" promptText="Google Books API Key">
            <VBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </VBox.margin>
        </JFXPasswordField>
        <HBox alignment="CENTER" prefHeight="43.0" prefWidth="334.0" spacing="25.0">
            <VBox.margin>
                <Insets top="20.0"/>
            </VBox.margin>
            <JFXButton onAction="#handleSaveButtonAction" prefHeight="100.0" prefWidth="100.0" text="Save"/>
            <JFXButton onAction="#handleCancelButtonAction" prefHeight="100.0" prefWidth="100.0" text="Cancel"/>
        </HBox>
    </VBox>
</AnchorPane>
